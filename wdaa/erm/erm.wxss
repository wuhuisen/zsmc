/* wdaa/erm/erm.wxss */
.content>view{
    width: 600rpx;
    height: 720rpx;
    margin: 140rpx auto;
    border-radius:24rpx;
    position: relative; 
    display: flex;
    flex-direction: column;
    padding: 52rpx;
    box-sizing: border-box;
    box-shadow: 2rpx 2rpx 10rpx #ccc;
}
.content>view>image:nth-of-type(1){
    width: 170rpx;
    height: 170rpx;
    border-radius: 50%;
    border:8rpx solid rgba(170, 196, 242, 1);
    position: absolute;
    top: -94rpx;
    left: 210rpx;
}
.content>view>text:nth-of-type(1){
    width: 100%;
    height: 130rpx;
    margin-top: 54rpx;
    font-size: 50rpx;
    color:rgba(0,0,0,1);
    line-height: 88rpx;
    text-align: center;

}
.content>view>text:nth-of-type(2){
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size:26rpx;
    color:rgba(153,153,153,1);
    border-bottom: 1rpx dashed #ccc;
}
.content>view>image:nth-of-type(2){
    width: 335rpx;
    height: 335rpx;
    margin: 30rpx auto;
}
.content>text{
    display: inline-block;
    width: 100% !important;
    height: 30rpx;
    text-align: center;
    font-size: 26rpx;
    color: rgba(147, 147, 153, 1);
}