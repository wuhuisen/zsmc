/* wdaa/index/index.wxss */
.content>view:nth-of-type(1){
    width: 100%;
    height: 310rpx;
    margin: 0 auto;
    padding: 30rpx 0 0 0;
    box-shadow: -2rpx 0rpx 10rpx rgba(20, 48, 102, 0.1);
    border-radius:16px;
    display: flex;
    justify-content: center;
    flex-direction:column;
    position: relative;

}
.content>view:nth-of-type(1)>image:nth-of-type(2){
    width: 100%;
    height: 270rpx;
    position: absolute;
    bottom: 0;
    z-index: 1;
}
.content>view:nth-of-type(1)>image:nth-of-type(1){
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    margin: -20rpx auto 30rpx;
    z-index: 10;
    
}
.content>view:nth-of-type(1)>text:nth-of-type(1){
    width: 160rpx;
    height: 34rpx;
    margin: 0 auto;
    font-size: 28rpx;
    color:rgba(51,51,51,1);
    text-align: center;
    z-index: 10;
}
.content>view:nth-of-type(1)>text:nth-of-type(2){
    width: 160rpx;
    height: 30rpx;
   font-size: 22rpx;
   color:rgba(153,153,153,1);
   text-align: center;
   margin: 0 auto;
   z-index: 10;
}
.content>view:nth-of-type(2){
    width: 100%;
    height: auto;
}
.content>view:nth-of-type(2)>view{
    width: 100%;
    height: 90rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid rgba(222, 222, 222, 1);
    font-size: 26rpx;
}
.content>view:nth-of-type(2)>view>image{
    width: 48rpx;
    height: 48rpx;
    margin-right: 20rpx;
}




