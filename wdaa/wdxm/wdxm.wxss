.content>view{
    width: 100%;
    height: 600rpx;
    /* box-shadow:0  0 5px #ccc; */
    border-radius:10px;
    position: relative;
    margin-bottom: -20rpx;
}
.content>view>image{
    width: 100%;
    height: 420rpx;
}
.content>view>view{
    width: 100%;
    height: 156rpx;
    border-radius:10px;
    box-shadow:0  0  5px #ccc;
    padding: 10rpx 40rpx 0rpx 40rpx;
    box-sizing: border-box;
    position: absolute;
    top: 400rpx;
}
.content>view>view>view:nth-of-type(1){
    width: 100%;
    height: 147rpx;
    display: flex;
    align-items: center;  
    border-bottom: 1rpx solid #EEEEEE;      
}
.content>view>view>view:nth-of-type(1)>image{
    width: 70rpx;
    height: 70rpx;
    border-radius:50%;
    border: 1px solid #ccc;
}
.content>view>view>view:nth-of-type(1)>view{
    width: 300rpx;
    height: 100%;
    padding: 20rpx 0 0 20rpx ;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;

}
.content>view>view>view:nth-of-type(1)>view>text{
width: 100%;
height: 44rpx;
line-height: 44rpx;
}
.content>view>view>view:nth-of-type(1)>view>text:nth-of-type(1){
    font-size: 28rpx;
}
.content>view>view>view:nth-of-type(1)>view>text:nth-of-type(2){
  color: #ED5A5A;
  font-size: 26rpx;
}
.content>view>view>view:nth-of-type(1)>view>text:nth-of-type(3){
    color: #CCCCCC;
    font-size: 22rpx;
}
.content>view>view>view:nth-of-type(1)>button{
    width:260rpx;
    height:48rpx;
    color: #fff;
    background:linear-gradient(90deg,rgba(133,170,242,1),rgba(57,115,230,1));
border-radius:24px;
display: flex;
justify-content: center;
align-items: center;
font-size: 22rpx !important;
font-weight: 400 !important;
}
.content>view>view>view:nth-of-type(1)>button>image{
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}
