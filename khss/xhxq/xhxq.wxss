/* khss/xhxq/xhxq.wxss */
.content{
 padding: 0 !important;
 background: rgba(240,240,240,1);
}
.content>view:nth-of-type(1){
    width: 100%;
    height: 232rpx;
    box-shadow: 0 0 30rpx #ccc;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    background: #fff;
}
.content>view:nth-of-type(1)>image{
    width: 120rpx;
    height: 120rpx;
    border-radius:16rpx;
}
.content>view:nth-of-type(1)>view:nth-of-type(1){
    width: 380rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
    font-size: 22rpx;
    color:rgba(153,153,153,1);
}
.content>view:nth-of-type(1)>view:nth-of-type(1)>text:nth-of-type(1){
font-size: 28rpx;
height: 50rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
}
.content>view:nth-of-type(1)>view:nth-of-type(2){
    width: 146rpx;
    height: 100%;
}
.content>view:nth-of-type(1)>view:nth-of-type(2)>view{
    width: 100%;
    height: 35%;
    display: flex;
    align-items: center;
    font-size: 24rpx;
}
.content>view:nth-of-type(1)>view:nth-of-type(2)>view>image{
    width: 48rpx;
    height: 48rpx;
}
.content>view:nth-of-type(2){
    width: 100%;
    height: 380rpx;
    padding: 30rpx;
    box-sizing: border-box;
    background: #fff;
    margin-bottom: 10rpx;
}
.content>view:nth-of-type(2)>text{
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
}
.content>view:nth-of-type(2)>view{
    width: 100%;
    height: 80rpx;
    display: flex;
}
.content>view:nth-of-type(2)>view>text{
    width: 25%;
    height: 100%;
    text-align: center;
    line-height: 80rpx;
}
.content>view:nth-of-type(3){
    width: 100%;
    height: auto;
    padding: 30rpx;
    box-sizing: border-box;
    background: #fff;
}
.content>view:nth-of-type(3)>text{
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
}
.content>view:nth-of-type(3)>view{
    width: 100%;
    height: 80rpx;
    display: flex;
}
.content>view:nth-of-type(3)>view>text{
    width: 25%;
    height: 100%;
    text-align: center;
    line-height: 80rpx;
}




